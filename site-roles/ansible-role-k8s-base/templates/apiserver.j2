# The address on the local server to listen to.
KUBE_API_ADDRESS="--address={{ k8s_apiserver_listen_address }}"

# The port on the local server to listen on.
KUBE_API_PORT="--port={{ k8s_apiserver_port }}"

# Port kubelets listen on
KUBELET_PORT="--kubelet-port={{ k8s_kubelet_port }}"

# Comma separated list of nodes in the etcd cluster
KUBE_ETCD_SERVERS="--etcd-servers=http://{{ hostvars[groups['k8s_masters'][0]]['inventory_hostname'] }}:{{ k8s_etcd_port }}"

# Address range to use for services
KUBE_SERVICE_ADDRESSES="--service-cluster-ip-range={{ k8s_cluster_ip_range }}"

# Add your own!
KUBE_API_ARGS=""